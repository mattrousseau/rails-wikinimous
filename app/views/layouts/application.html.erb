  </head>

  <body>
    <div class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <h2>Wikinimous</h2>
        </div>

        <%= link_to new_article_path do %>

          <ul class="nav navbar-nav navbar-right">
            New Article
          </ul>

        <% end %>


      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
